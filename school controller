import MODEL from "../utils/allModels.js";

export const addSchool = async (req, res) => {
  const { name, location } = req.body;
  if (!name || !location)
    return res.status(400).send("❌ Name and location are required.");
  try {
    await MODEL.SCHOOL.create({ name, location });
    res.send("✅ School added successfully!");
  } catch (err) {
    res.status(500).send("❌ Error adding school");
  }
};

export const getSchools = async (req, res) => {
  try {
    const schools = await MODEL.SCHOOL.findAll();

    res.status(200).json({
      message: "school fetch successfully",
      schools,
    });
  } catch (err) {
    res.status(500).send("❌ Error fetching school");
  }
};

export const getSchoolsbyid = async (req, res) => {
  try {
    console.log(req.query.id);
    const schools = await MODEL.SCHOOL.findOne({ where: { id: req.query.id } });
    res.status(200).json({
      message: "school fetch successfully",
      schools,
    });
    
  } catch (err) {
    res.status(500).send("❌ Error fetching school");
  }
};
